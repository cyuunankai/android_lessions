<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slideimage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyNewActivity"
            android:label="@string/title_activity_my_new" >
        </activity>
        <activity
            android:name=".MyEditActivity"
            android:label="@string/title_activity_my_edit" >
        </activity>
        <activity
            android:name=".MyDetailActivity"
            android:label="@string/title_activity_my_detail" >
        </activity>
    </application>

</manifest>
